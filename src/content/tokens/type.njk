{% tokenTable %}
{% for step in type.records %}
	<tr>
		<td class="[ col-token ]">
			<code>var(--step-{{ step.fields.Step }})</code>
		</td>
		<td class="[ col-desc ]">
			{% if step.fields.Description %}
				<p>{{ step.fields.Description | markdown | safe }}</p>
			{% endif %}
		</td>
		<td class="[ col-example ][ flow ]">
			<p style="font-size: var(--step-{{ step.fields.Step }});">Quick brown fox</p>
			<p>
					@min: <code>{{ step.fields["@min"] }}</code> / <code>{{ step.fields["@min"] | int / 16 }}rem</code>
			</p>
			<p>
					@max: <code>{{ step.fields["@max"] }}</code> / <code>{{ step.fields["@max"] | int / 16 }}rem</code>
			</p>
		</td>
	</tr>
{% endfor %}
{% endtokenTable %}