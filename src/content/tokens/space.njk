{% tokenTable %}
{% for step in space.records %}
	<tr>
		<td class="[ col-token ]">
			<code>var(--space-{{ step.fields.Step | lower }})</code>
		</td>
		<td class="[ col-desc ]">
			{% if step.fields.Description %}
				<p>{{ step.fields.Description | markdown | safe }}</p>
			{% endif %}
		</td>
		<td class="[ col-example ][ flow ]">
			<div
				class="space"
				style="
					inline-size: var(--space-{{ step.fields.Step | lower }});
					block-size: var(--space-{{ step.fields.Step | lower }});
				"
			></div>
			<p>
				@min: <code>{{ step.fields["@min"] }}</code>
			</p>
			<p>
				@max: <code>{{ step.fields["@max"] }}</code>
			</p>
		</td>
	</tr>
{% endfor %}
{% endtokenTable %}